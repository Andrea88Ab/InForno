@model IEnumerable<InForno.Models.Prodotto>
@using System.Globalization

@{
    ViewBag.Title = "Index";

}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="row flex-column flex-md-row">
    <div class="col col-md-9">
        <h2 class="text-center text-white">MENU</h2>
        @foreach (var item in Model)
        {
            <div class="card d-flex my-2 flex-column flex-md-row mb-3">
                <img src="~/Content/assets/@item.Foto" class="card-img-top w-25" alt="@item.Nome">
                <div class="card-body justify-content-between align-items-start row">
                    <div class="d-flex flex-column mx-2 col">
                        <h5 class="card-title">@item.Nome</h5>
                        <p class="card-text fst-italic">@item.Ingredienti</p>
                        <p class="fw-bold mx-2">€@item.Prezzo.ToString("N2", new CultureInfo("it-IT"))</p>
                    </div>
                    <div class="mx-2 col">
                        @using (Html.BeginForm("AddToCart", "Home", FormMethod.Post))
                        {
                            @Html.Hidden("IdProdotto", item.IdProdotto)
                            <div class="form-group">
                                <label for="IdAggiunzione">Aggiunta</label>
                                @Html.DropDownList("IdAggiunzione", new SelectList(ViewBag.Aggiunzioni, "Value", "Text"), new { @class = "form-control" })
                            </div>
                            <label for="Quantita">Quantità</label>
                            <input id="Quantita" name="Quantita" class="w-50 form-control" type="number" value="1" />
                            <input type="submit" value="Aggiungi" class="btn my-2" />
                        }
                    </div>
                </div>
            </div>
        }
    </div>
    <style>
        .sticky-cart {
            position: -webkit-sticky; 
            position: sticky;
            top: 95px; 
            max-height: 50vh; 
            
        }
    </style>
    <div class="col col-md-3 col col-md-3 sticky-cart">
        <h2 class="text-center text-white">CARRELLO</h2>
        <div class="card">
            <div class="card-body">
                @if (ViewBag.Carrello != null && ViewBag.Carrello.Count > 0) 
                {
                    for (int i = 0; i < ViewBag.Carrello.Count; i++)
                    {
                        InForno.Models.Cart p = ViewBag.Carrello[i];
                        <div>
                            <p class="fw-bold my-0">@p.Nome</p>
                            <p class="my-0">x (@p.Quantita) €@( (p.CostoProdotto * p.Quantita + p.CostoAggiunzione * p.Quantita).ToString("N2", new System.Globalization.CultureInfo("it-IT")) )</p>
                            @Html.ActionLink("Rimuovi", "Remove", "Home", new { id = i }, new { @class = "btn my-2" })
                        </div>
                        <hr />
                    }
                    <div class="d-flex flex-column align-items-md-center">
                        <p class="fw-bold">Totale: €@InForno.Models.Cart.CalcoloCostoTotale(ViewBag.Carrello).ToString("N2", new System.Globalization.CultureInfo("it-IT"))</p>
                        @Html.ActionLink("Ordina", "AddOrdine", "Ordine", null, new { @class = "btn" })
                    </div>
                }
                else
                {
                    <p class="text-center">Il tuo carrello è vuoto.</p>
                }
            </div>
        </div>
    </div>


</div>
@section Scripts {
    <script>$(document).ready(function() {
            if ($(".alert-success").length) {
                setTimeout(function() {
                    $(".alert-success").fadeOut("slow");
                }, 3000);
            }
        });</script>
}




